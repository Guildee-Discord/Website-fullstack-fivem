<!-- Checkbox peer pour ouvrir/fermer le menu mobile -->
<input id="nav-toggle" type="checkbox" class="peer sr-only" aria-hidden="true" />

<header class="sticky top-0 z-50 border-b border-white/10 bg-gray-950/80 backdrop-blur">
  <div class="mx-auto w-[min(1200px,92vw)] flex items-center justify-between gap-4 py-3">

    <!-- Brand -->
    <a href="/" class="flex items-center gap-3" aria-label="Accueil">
      <span class="grid h-10 w-10 place-items-center rounded-xl bg-white/5 border border-white/10 shadow-[0_12px_30px_rgba(0,0,0,.35),0_6px_12px_rgba(0,0,0,.25)]">
        <!-- petit logo simple -->
        <span class="text-indigo-300 font-black text-lg">F</span>
      </span>
      <span class="flex flex-col leading-none">
        <span class="text-[18px] font-bold">Website FiveM</span>
        <span class="text-[12px] text-gray-400 mt-1">Discord • MySQL • Dashboard</span>
      </span>
    </a>

    <!-- Desktop links -->
    <nav class="hidden items-center gap-1 md:flex" aria-label="Navigation principale">
      <a href="/"
         class="inline-flex items-center gap-2 rounded-xl border border-transparent px-3 py-2 text-gray-200 hover:border-white/10 hover:bg-white/5">
        Accueil
      </a>

      <a href="/dashboard"
         class="inline-flex items-center gap-2 rounded-xl border border-transparent px-3 py-2 text-gray-200 hover:border-white/10 hover:bg-white/5">
        Dashboard
      </a>

      <a href="/link"
         class="inline-flex items-center gap-2 rounded-xl border border-transparent px-3 py-2 text-gray-200 hover:border-white/10 hover:bg-white/5">
        Lier
      </a>
    </nav>

    <!-- Right side -->
    <div class="flex items-center gap-2">
      <% if (!user) { %>
        <!-- Connexion (desktop) -->
        <a href="/login"
           class="hidden md:inline-flex items-center gap-2 rounded-xl bg-indigo-600 px-3 py-2 font-semibold text-white shadow-[0_10px_24px_rgba(99,102,241,.25)] hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-400/40">
          Se connecter
        </a>
      <% } else { %>
        <!-- Status pill (desktop) -->
        <div class="hidden md:flex items-center gap-2 rounded-xl border border-white/10 bg-white/5 px-3 py-2">
          <span class="relative">
            <span class="absolute -inset-1 rounded-full blur opacity-30 <%= user.linked ? 'bg-emerald-400' : 'bg-yellow-400' %>"></span>
            <span class="relative inline-block h-2.5 w-2.5 rounded-full <%= user.linked ? 'bg-emerald-400' : 'bg-yellow-400' %>"></span>
          </span>
          <span class="text-sm text-gray-200">
            <%= user.linked ? 'Lié' : 'Non lié' %>
          </span>
        </div>

        <!-- Profile dropdown (desktop) -->
        <details class="relative hidden md:block">
          <summary class="flex cursor-pointer list-none items-center gap-3 rounded-xl border border-white/10 bg-white/5 px-2.5 py-1.5 hover:bg-white/10">
            <span class="nav-avatar-wrap w-8 h-8">
              <% if (user.avatar) { %>
                <img
                  src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.avatar %>.png?size=64"
                  alt="Avatar"
                  class="nav-avatar w-full h-full object-cover" />
              <% } else { %>
                <span class="grid w-full h-full place-items-center rounded-full bg-black/30 border border-white/10 text-xs text-gray-300">?</span>
              <% } %>
            </span>

            <span class="hidden lg:flex flex-col leading-tight">
              <span class="text-sm font-semibold text-gray-100">
                <%= user.username ? user.username : 'Compte Discord' %>
              </span>
              <span class="text-[11px] text-gray-400">
                <%= user.linked ? 'Accès dashboard OK' : 'Lien requis' %>
              </span>
            </span>

            <svg class="h-4 w-4 opacity-80 text-gray-200" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M7 10l5 5 5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
          </summary>

          <div class="absolute right-0 mt-2 w-64 overflow-hidden rounded-2xl border border-white/10 bg-gray-950 shadow-2xl">
            <div class="flex items-center gap-3 border-b border-white/10 p-3 bg-white/5">
              <span class="nav-avatar-wrap w-10 h-10">
                <% if (user.avatar) { %>
                  <img
                    src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.avatar %>.png?size=128"
                    alt="Avatar"
                    class="nav-avatar w-full h-full object-cover" />
                <% } else { %>
                  <span class="grid w-full h-full place-items-center rounded-full bg-black/30 border border-white/10 text-sm text-gray-300">?</span>
                <% } %>
              </span>
              <div class="min-w-0">
                <p class="truncate text-sm font-semibold text-gray-100">
                  <%= user.username ? user.username : 'Compte Discord' %>
                </p>
                <p class="truncate text-xs text-gray-400">
                  discord_id: <%= user.discord_id %>
                </p>
              </div>
            </div>

            <nav class="p-2 text-sm">
              <a href="/dashboard"
                 class="flex items-center gap-2 rounded-xl px-2 py-2 text-gray-200 hover:bg-white/5">
                Dashboard
              </a>

              <% if (user.linked) { %>
                <form method="POST" action="/unlink" class="px-2 py-1">
                  <button type="submit"
                          class="w-full flex items-center justify-start gap-2 rounded-xl px-2 py-2 text-red-300 hover:bg-white/5"
                          onclick="return confirm('Es-tu sûr de vouloir délier ton compte ?');">
                    Délier le compte
                  </button>
                </form>
              <% } else { %>
                <a href="/link"
                   class="flex items-center gap-2 rounded-xl px-2 py-2 text-indigo-200 hover:bg-white/5">
                  Lier mon compte
                </a>
              <% } %>

              <a href="/logout"
                 class="flex items-center gap-2 rounded-xl px-2 py-2 text-gray-200 hover:bg-white/5">
                Déconnexion
              </a>
            </nav>
          </div>
        </details>
      <% } %>

      <!-- Bouton menu mobile -->
      <label for="nav-toggle"
             aria-controls="mobile-sheet"
             aria-label="Ouvrir le menu"
             class="md:hidden grid h-[42px] w-[42px] place-items-center rounded-xl border border-white/10 bg-white/5 text-white cursor-pointer hover:bg-white/10">
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none">
          <path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
        </svg>
      </label>
    </div>
  </div>
</header>

<!-- Mobile overlay -->
<label for="nav-toggle"
  class="fixed inset-0 z-[60] cursor-pointer opacity-0 backdrop-blur-sm transition
         pointer-events-none bg-black/60
         peer-checked:opacity-100 peer-checked:pointer-events-auto"
  aria-hidden="true"></label>

<!-- Mobile slide-over -->
<aside id="mobile-sheet" role="dialog" aria-modal="true"
  class="fixed right-0 top-0 z-[61] h-full w-[88%] max-w-[360px] translate-x-full
         border-l border-white/10 bg-gray-950 shadow-2xl transition-transform transform-gpu will-change-transform overflow-y-auto
         peer-checked:translate-x-0">

  <div class="sticky top-0 z-10 flex items-center justify-between border-b border-white/10 bg-gray-950/95 backdrop-blur p-4">
    <div class="flex items-center gap-2">
      <span class="grid h-9 w-9 place-items-center rounded-xl bg-white/5 border border-white/10">
        <span class="text-indigo-300 font-black">F</span>
      </span>
      <span class="font-semibold text-gray-100">Website FiveM</span>
    </div>

    <label for="nav-toggle"
      class="grid h-9 w-9 place-items-center rounded-xl border border-white/10 bg-white/5 text-white cursor-pointer hover:bg-white/10"
      aria-label="Fermer">
      <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none">
        <path d="M6 6l12 12M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
      </svg>
    </label>
  </div>

  <% if (user) { %>
    <div class="m-4 rounded-2xl border border-white/10 bg-white/5 p-4">
      <div class="flex items-center gap-3">
        <span class="nav-avatar-wrap w-10 h-10">
          <% if (user.avatar) { %>
            <img src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.avatar %>.png?size=128"
                 alt="Avatar"
                 class="nav-avatar w-full h-full object-cover" />
          <% } else { %>
            <span class="grid w-full h-full place-items-center rounded-full bg-black/30 border border-white/10 text-sm text-gray-300">?</span>
          <% } %>
        </span>
        <div class="min-w-0">
          <p class="truncate text-sm font-semibold text-gray-100">
            <%= user.username ? user.username : 'Compte Discord' %>
          </p>
          <p class="truncate text-xs text-gray-400">
            <%= user.linked ? 'Lié' : 'Non lié' %>
          </p>
        </div>
      </div>

      <div class="mt-3 grid grid-cols-1 gap-2 text-sm">
        <a href="/dashboard"
           class="w-full flex items-center justify-center rounded-xl border border-white/10 bg-black/20 px-3 py-2 hover:bg-white/5">
          Dashboard
        </a>

        <% if (user.linked) { %>
          <form method="POST" action="/unlink">
            <button type="submit"
              class="w-full rounded-xl bg-red-600 px-3 py-2 font-semibold text-white hover:bg-red-500"
              onclick="return confirm('Es-tu sûr de vouloir délier ton compte ?');">
              Délier mon compte
            </button>
          </form>
        <% } else { %>
          <a href="/link"
             class="w-full rounded-xl bg-indigo-600 px-3 py-2 font-semibold text-white text-center hover:bg-indigo-500">
            Lier mon compte
          </a>
        <% } %>

        <a href="/logout"
           class="w-full flex items-center justify-center rounded-xl border border-white/10 bg-black/20 px-3 py-2 hover:bg-white/5">
          Déconnexion
        </a>
      </div>
    </div>
  <% } else { %>
    <div class="m-4 rounded-2xl border border-white/10 bg-white/5 p-4">
      <a href="/login"
         class="w-full inline-flex items-center justify-center rounded-xl bg-indigo-600 px-3 py-2 font-semibold text-white hover:bg-indigo-500">
        Se connecter avec Discord
      </a>
    </div>
  <% } %>

  <nav class="px-4 pb-6 text-sm">
    <p class="px-1 pb-2 text-xs uppercase tracking-wide text-gray-400">Navigation</p>
    <ul class="space-y-1">
      <li><a href="/" class="block rounded-xl px-3 py-2 text-gray-200 hover:bg-white/5">Accueil</a></li>
      <li><a href="/dashboard" class="block rounded-xl px-3 py-2 text-gray-200 hover:bg-white/5">Dashboard</a></li>
      <li><a href="/link" class="block rounded-xl px-3 py-2 text-gray-200 hover:bg-white/5">Lier</a></li>
    </ul>
  </nav>
</aside>

<style>
  .nav-avatar-wrap { position: relative; display: inline-block; border-radius: 9999px; overflow: visible; }
  .nav-avatar { display: block; border-radius: 9999px; }
</style>