<div id="toast-container">
  <% if (toasts) { %>
  <% toasts.forEach(t => { %>
  <div class="toast toast-<%= t.type %>">
    <span class="toast-icon">
      <% if (t.type === "success") { %><i class="fa-solid fa-circle-check"></i><% } %>
      <% if (t.type === "error")   { %><i class="fa-solid fa-circle-xmark"></i><% } %>
      <% if (t.type === "info")    { %><i class="fa-solid fa-circle-info"></i><% } %>
      <% if (t.type === "warning") { %><i class="fa-solid fa-triangle-exclamation"></i><% } %>
    </span>
    <span class="toast-message"><%= t.message %></span>
  </div>
  <% }) %>
  <% } %>
</div>


<style>
  #toast-container {
    position: fixed;
    bottom: 24px;
    right: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    z-index: 9999;
  }

  .toast {
    display: flex;
    align-items: center;
    gap: 12px;
    min-width: 260px;
    max-width: 360px;
    padding: 14px 18px;
    border-radius: 10px;
    font-size: 14px;
    line-height: 1.4;
    color: #fff;
    backdrop-filter: blur(6px);
    background: rgba(40, 40, 40, 0.85);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
    opacity: 0;
    transform: translateY(12px) scale(0.98);
    animation: toast-in 0.35s cubic-bezier(.2, .8, .2, 1) forwards,
      toast-out 0.3s ease forwards 4s;
  }

  .toast-icon {
    font-size: 18px;
    flex-shrink: 0;
  }

  .toast-success {
    background: linear-gradient(135deg, #2e7d32, #43a047);
  }

  .toast-error {
    background: linear-gradient(135deg, #c62828, #e53935);
  }

  .toast-info {
    background: linear-gradient(135deg, #1565c0, #1e88e5);
  }

  .toast-warning {
    background: linear-gradient(135deg, #ef6c00, #fb8c00);
  }

  .toast-icon i {
    font-size: 18px;
    opacity: 0.9;
  }

  @keyframes toast-in {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes toast-out {
    to {
      opacity: 0;
      transform: translateY(12px) scale(0.96);
    }
  }
</style>

<script>
  setTimeout(() => {
    document.querySelectorAll(".toast").forEach(t => t.remove());
  }, 4300);
</script>