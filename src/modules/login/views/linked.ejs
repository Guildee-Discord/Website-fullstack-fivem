        <% if (typeof success !== "undefined" && success) { %>
        <div class="mb-5 p-4 rounded-xl border border-green-500/30 bg-green-500/10 text-green-200 text-sm">
          <i class="fa-solid fa-circle-check mr-2"></i><%= success %>
