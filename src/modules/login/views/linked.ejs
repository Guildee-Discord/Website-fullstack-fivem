<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title><%= config?.name || "Undefined" %></title>
  <% if (websiteLogo) { %>
  <link rel="icon" type="image/png" href="<%= websiteLogo %>">
  <meta property="og:image" content="<%= websiteLogo %>">
  <meta name="twitter:image" content="<%= websiteLogo %>">
  <% } %>
  <script src="https://cdn.tailwindcss.com"></script>
  <%- include(coreView("partials/icons/font-awesome")) %>
  <%- include(coreView("partials/toast/toast")) %>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Exo+2:wght@300;400;500;600;700;800&display=swap');

    :root {
      /* Une seule couleur pilotée par config.json */
      --primary: <%=(config?.color || config?.colors) %>;

      /* Alias utilisé partout */
      --accent: var(--primary);

      /* Dérivées automatiques */
      --secondary: color-mix(in srgb, var(--primary) 70%, #ffffff 30%);

      /* Base plus claire (au lieu d'un gris "très sombre" partout) */
      --dark: #2a2d35;
      --darker: #121420;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Exo 2', sans-serif;
      overflow-x: hidden;

      /* Plus clair que avant -> le site respire davantage */
      background: var(--darker);
    }

    h1,
    h2,
    h3,
    .logo-text {
      font-family: 'Orbitron', sans-serif;
    }

    /* Dark animated background (moins sombre, plus lumineux) */
    .animated-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;

      /* Avant: très noir. Maintenant: un peu plus “bleu nuit” et lisible */
      background: radial-gradient(ellipse at bottom, #171a26 0%, #07070b 100%);
      z-index: -1;
    }

    .animated-bg::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;

      /* Accent un poil plus présent pour "éclairer" le fond */
      background:
        radial-gradient(circle at 15% 20%, color-mix(in srgb, var(--primary) 12%, transparent) 0%, transparent 45%),
        radial-gradient(circle at 85% 80%, color-mix(in srgb, var(--primary) 10%, transparent) 0%, transparent 45%),
        radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.03) 0%, transparent 55%);
      animation: pulse 8s ease-in-out infinite;
    }

    @keyframes pulse {

      0%,
      100% {
        opacity: 0.45;
      }

      50% {
        opacity: 0.85;
      }
    }

    /* Subtle grid (plus discret mais présent) */
    .grid-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image:
        linear-gradient(color-mix(in srgb, var(--primary) 4%, transparent) 1px, transparent 1px),
        linear-gradient(90deg, color-mix(in srgb, var(--primary) 4%, transparent) 1px, transparent 1px);
      background-size: 60px 60px;
      pointer-events: none;
      z-index: 1;

      /* Avant 0.3: ça assombrit parfois + bruit visuel. Ici plus clean */
      opacity: 0.22;
    }

    /* Navbar (un poil moins opaque pour laisser respirer) */
    .navbar {
      backdrop-filter: blur(20px) saturate(180%);
      background: rgba(8, 8, 14, 0.82);
      border-bottom: 1px solid color-mix(in srgb, var(--primary) 18%, transparent);
    }

    .nav-link {
      position: relative;
      transition: all 0.3s ease;
      color: rgba(255, 255, 255, 0.78);
    }

    .nav-link::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 50%;
      width: 0;
      height: 2px;
      background: var(--accent);
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }

    .nav-link:hover::after {
      width: 100%;
    }

    .nav-link:hover {
      color: var(--accent);
    }

    /* Hero section (banner plus visible) */
    .hero-section {
      min-height: 100vh;
      position: relative;
      overflow: hidden;

      /* Avant trop noir. Maintenant: plus lumineux + contrast propre */
      background: linear-gradient(180deg,
          rgba(0, 0, 0, 0.55) 0%,
          rgba(12, 13, 20, 0.82) 100%);
    }

    .hero-section::before {
      content: '';
      position: absolute;
      inset: 0;
      background: url('https://images.unsplash.com/photo-1550745165-9bc0b252726f?w=1920&q=80') center/cover no-repeat;

      /* Avant 0.15 -> trop faible. Ici plus visible */
      opacity: 0.28;
      z-index: -1;

      /* Petit boost de lisibilité */
      filter: contrast(1.08) saturate(1.1) brightness(1.02);
      transform: scale(1.02);
    }

    /* Overlay léger pour éviter que le texte se perde, tout en gardant l'image visible */
    .hero-section::after {
      content: '';
      position: absolute;
      inset: 0;
      z-index: -1;
      background:
        radial-gradient(800px 500px at 50% 25%, rgba(255, 255, 255, 0.06) 0%, transparent 60%),
        radial-gradient(900px 700px at 20% 60%, color-mix(in srgb, var(--primary) 10%, transparent) 0%, transparent 65%),
        linear-gradient(180deg, rgba(0, 0, 0, 0.25) 0%, rgba(0, 0, 0, 0.55) 100%);
      pointer-events: none;
    }

    /* Modern gradient text */
    .cyber-text {
      background: linear-gradient(135deg, #ffffff 0%, var(--accent) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* Sleek glow */
    .neon-glow {
      box-shadow: 0 0 20px color-mix(in srgb, var(--primary) 30%, transparent);
    }

    /* Modern card (un chouïa plus lisible) */
    .cyber-card {
      background: linear-gradient(135deg, rgba(18, 18, 28, 0.72) 0%, rgba(12, 12, 18, 0.84) 100%);
      backdrop-filter: blur(10px);
      border: 1px solid color-mix(in srgb, var(--primary) 22%, transparent);
      position: relative;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .cyber-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, color-mix(in srgb, var(--primary) 12%, transparent), transparent);
      transition: left 0.6s ease;
    }

    .cyber-card:hover {
      border-color: color-mix(in srgb, var(--primary) 55%, transparent);
      transform: translateY(-8px);
      box-shadow: 0 20px 40px color-mix(in srgb, var(--primary) 20%, transparent);
    }

    .cyber-card:hover::before {
      left: 100%;
    }

    /* Stats */
    .stat-number {
      font-family: 'Orbitron', sans-serif;
      font-size: 3rem;
      font-weight: 900;
      color: var(--accent);
      text-shadow: 0 0 20px color-mix(in srgb, var(--primary) 50%, transparent);
      line-height: 1;
      letter-spacing: 0.02em;
    }

    /* Button */
    .cyber-btn {
      position: relative;
      background: linear-gradient(135deg,
          color-mix(in srgb, var(--primary) 12%, transparent),
          color-mix(in srgb, var(--primary) 18%, transparent));
      border: 2px solid var(--accent);
      color: var(--accent);
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      overflow: hidden;
      transition: all 0.3s ease;
      will-change: transform;
    }

    .cyber-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, color-mix(in srgb, var(--primary) 30%, transparent), transparent);
      transition: left 0.5s ease;
    }

    .cyber-btn:hover::before {
      left: 100%;
    }

    .cyber-btn:hover {
      background: color-mix(in srgb, var(--primary) 24%, transparent);
      box-shadow: 0 0 30px color-mix(in srgb, var(--primary) 40%, transparent);
      transform: translateY(-2px);
    }

    /* Job cards */
    .job-card {
      background: rgba(18, 18, 28, 0.62);
      border: 1px solid color-mix(in srgb, var(--primary) 22%, transparent);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .job-card::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: color-mix(in srgb, var(--primary) 12%, transparent);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .job-card:hover::after {
      width: 300px;
      height: 300px;
    }

    .job-card:hover {
      border-color: var(--accent);
      box-shadow: 0 0 25px color-mix(in srgb, var(--primary) 30%, transparent);
      transform: scale(1.05);
    }

    /* Float animation */
    @keyframes float {

      0%,
      100% {
        transform: translateY(0px);
      }

      50% {
        transform: translateY(-15px);
      }
    }

    .float-anim {
      animation: float 3s ease-in-out infinite;
    }

    /* Mobile menu */
    .mobile-menu {
      backdrop-filter: blur(20px) saturate(180%);
      background: rgba(8, 8, 14, 0.92);
      border-bottom: 1px solid color-mix(in srgb, var(--primary) 20%, transparent);
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-14px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .mobile-menu-open {
      animation: slideDown 0.25s ease forwards;
    }

    /* Scanlines removed for cleaner look */
    .scanlines {
      display: none;
    }

    /* Smooth anchor scroll offset (navbar height) */
    section {
      scroll-margin-top: 96px;
    }

    /* Divider glow line */
    .glow-line {
      height: 1px;
      width: 100%;
      background: linear-gradient(90deg, transparent, color-mix(in srgb, var(--primary) 50%, transparent), transparent);
      opacity: 0.6;
    }

    /* === Responsive polish (no visual redesign, just cleaner scaling) === */
    @media (max-width: 640px) {
      .stat-number {
        font-size: 2.25rem;
      }

      /* Mobile: le hero était trop sombre -> on boost encore un peu l'image */
      .hero-section::before {
        opacity: 0.34;
        filter: contrast(1.08) saturate(1.12) brightness(1.05);
      }

      .hero-section::after {
        background:
          radial-gradient(700px 420px at 50% 18%, rgba(255, 255, 255, 0.075) 0%, transparent 60%),
          radial-gradient(800px 650px at 20% 65%, color-mix(in srgb, var(--primary) 12%, transparent) 0%, transparent 68%),
          linear-gradient(180deg, rgba(0, 0, 0, 0.18) 0%, rgba(0, 0, 0, 0.50) 100%);
      }
    }

    /* Prevent code samples from overflowing on small screens */
    code {
      word-break: break-all;
    }

    /* === Tailwind hex overrides -> piloté par --accent (config) === */
    /* Text */
    .text-\[\<%=config.color %>\],
    .text-\[\#D4AF37\] {
      color: var(--accent) !important;
    }

    /* Border */
    .border-\[\<%=config.color %>\] {
      border-color: var(--accent) !important;
    }

    .border-\[\<%=config.color %>\]\/20 {
      border-color: color-mix(in srgb, var(--accent) 20%, transparent) !important;
    }

    .border-\[\<%=config.color %>\]\/30 {
      border-color: color-mix(in srgb, var(--accent) 30%, transparent) !important;
    }

    /* Background */
    .bg-\[\<%=config.color %>\]\/10 {
      background-color: color-mix(in srgb, var(--accent) 10%, transparent) !important;
    }

    /* Hover background used in multiple places */
    .hover\:bg-\[\<%=config.color %>\]\/10:hover {
      background-color: color-mix(in srgb, var(--accent) 10%, transparent) !important;
    }

    /* Gradients (Tailwind uses CSS variables for gradient stops) */
    .from-\[\<%=config.color %>\] {
      --tw-gradient-from: var(--accent) !important;
      --tw-gradient-to: color-mix(in srgb, var(--accent) 0%, transparent) !important;
      --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to) !important;
    }

    .to-\[\#0099cc\] {
      --tw-gradient-to: var(--secondary) !important;
    }

    /* Fallback for any element explicitly set to the old accent in custom utilities */
    .text-\[\<%=config.color %>\]\/70 {
      color: color-mix(in srgb, var(--accent) 70%, transparent) !important;
    }
  </style>
</head>

