  <script>
    // === CONFIG (remplace ces liens) ===
    const LINKS = {
      discord: "https://discord.gg/xxxx",
      connect: "https://cfx.re/join/xxxxxx",
      store: "https://votre-boutique.example",
      rules: "https://discord.com/channels/xxxx/xxxx" // optionnel
    };

    // IMPORTANT: √©viter une erreur JS qui casse tout le script
    const SERVER_DOWN = <%= serverDown ? 'true' : 'false' %>;
    const ONLINE = SERVER_DOWN ? 0 : <%= Number(onlineCount || 0) %>;

    // Inject links
    const setHref = (id, url) => {
      const el = document.getElementById(id);
      if (!el) return;
      el.href = url;
      el.target = "_blank";
      el.rel = "noopener noreferrer";
    };

    setHref("discord-cta-desktop", LINKS.discord);
    setHref("discord-cta-mobile", LINKS.discord);
    setHref("discord-cta-hero", LINKS.discord);
    setHref("discord-cta-store", LINKS.discord);
    setHref("rules-cta", LINKS.rules || LINKS.discord);
    setHref("footer-discord", LINKS.discord);

    setHref("connect-cta", LINKS.connect);
    setHref("footer-connect", LINKS.connect);

    // Online count text (mobile uniquement si serveur OK)
    const mobileCount = document.getElementById("online-count-mobile");
    if (mobileCount && !SERVER_DOWN) mobileCount.textContent = `${ONLINE} JOUEURS EN LIGNE`;

    // Year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Mobile menu toggle
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");

    const openMenu = () => {
      menu.classList.remove("hidden");
      menu.classList.add("mobile-menu-open");
      menuIcon.classList.add("hidden");
      closeIcon.classList.remove("hidden");
      btn.setAttribute("aria-label", "Fermer le menu");
    };

    const closeMenu = () => {
      menu.classList.add("hidden");
      menu.classList.remove("mobile-menu-open");
      menuIcon.classList.remove("hidden");
      closeIcon.classList.add("hidden");
      btn.setAttribute("aria-label", "Ouvrir le menu");
    };

    if (btn && menu) {
      btn.addEventListener("click", () => {
        const isHidden = menu.classList.contains("hidden");
        isHidden ? openMenu() : closeMenu();
      });

      // Close mobile menu when clicking a link
      document.querySelectorAll(".mobile-link").forEach((a) => {
        a.addEventListener("click", () => closeMenu());
      });
    }

    // Smooth scrolling for internal anchors
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener("click", (e) => {
        const href = anchor.getAttribute("href");
        if (!href || href === "#") return;
        const target = document.querySelector(href);
        if (!target) return;
        e.preventDefault();
        target.scrollIntoView({
          behavior: "smooth",
          block: "start"
        });
      });
    });

    // === FIX MENU USER (dropdown qui ne se ferme pas instant) ===
    const userBtn = document.getElementById("user-menu-btn");
    const userDropdown = document.getElementById("user-menu-dropdown");

    const openUserMenu = () => {
      if (!userBtn || !userDropdown) return;
      userDropdown.classList.remove("hidden");
      userBtn.setAttribute("aria-expanded", "true");
    };

    const closeUserMenu = () => {
      if (!userBtn || !userDropdown) return;
      userDropdown.classList.add("hidden");
      userBtn.setAttribute("aria-expanded", "false");
    };

    const toggleUserMenu = () => {
      if (!userDropdown) return;
      const isHidden = userDropdown.classList.contains("hidden");
      isHidden ? openUserMenu() : closeUserMenu();
    };

    if (userBtn && userDropdown) {
      userBtn.addEventListener("click", (e) => {
        e.preventDefault();
        e.stopPropagation();
        toggleUserMenu();
      });

      // Click dehors => ferme
      document.addEventListener("click", (e) => {
        if (userDropdown.classList.contains("hidden")) return;
        const target = e.target;
        const clickedInside = userDropdown.contains(target) || userBtn.contains(target);
        if (!clickedInside) closeUserMenu();
      });

      // ESC => ferme
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") closeUserMenu();
      });

      // Click sur un item => ferme (optionnel mais agr√©able)
      userDropdown.querySelectorAll("a").forEach((a) => {
        a.addEventListener("click", () => closeUserMenu());
      });
    }
  </script>
