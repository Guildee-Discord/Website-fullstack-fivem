<style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Exo+2:wght@300;400;500;600;700;800&display=swap');

    :root {
        --accent: <%=(config && config.gradient.accent) ? config.gradient.accent: "#2596be" %>;
        --dark: <%=(config && config.gradient.dark) ? config.gradient.dark: "#070A12" %>;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Exo 2', sans-serif;
        overflow-x: hidden;
    }

    h1,
    h2,
    h3,
    .logo-text {
        font-family: 'Orbitron', sans-serif;
    }

    /* Animated Background */
    .animated-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--dark);
        z-index: -1;
    }

    .animated-bg::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background:
            radial-gradient(circle at 20% 30%, color-mix(in srgb, var(--accent) 30%, transparent) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, color-mix(in srgb, var(--accent) 25%, transparent) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, color-mix(in srgb, var(--accent) 18%, transparent) 0%, transparent 50%);
        animation: drift 20s infinite alternate ease-in-out;
    }

    @keyframes drift {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }

        100% {
            transform: translate(-50px, -50px) rotate(5deg);
        }
    }

    /* Grid overlay */
    .grid-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:
            linear-gradient(color-mix(in srgb, var(--accent) 10%, transparent) 1px, transparent 1px),
            linear-gradient(90deg, color-mix(in srgb, var(--accent) 10%, transparent) 1px, transparent 1px);
        background-size: 50px 50px;
        pointer-events: none;
        z-index: 1;
    }

    /* Navbar */
    .navbar {
        backdrop-filter: blur(20px) saturate(180%);
        background: rgba(10, 10, 30, 0.85);
        border-bottom: 1px solid color-mix(in srgb, var(--accent) 35%, transparent);
        box-shadow: 0 10px 40px color-mix(in srgb, var(--accent) 18%, transparent);
    }

    .mobile-menu {
        backdrop-filter: blur(20px) saturate(180%);
        background: rgba(10, 10, 30, 0.98);
        border-bottom: 2px solid color-mix(in srgb, var(--accent) 45%, transparent);
    }

    .nav-link {
        position: relative;
        transition: all 0.3s ease;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 50%;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--accent), var(--accent));
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .nav-link:hover::after {
        width: 100%;
    }

    .nav-link:hover {
        color: var(--accent);
        text-shadow: 0 0 10px color-mix(in srgb, var(--accent) 50%, transparent);
    }

    /* Cyber gradient text */
    .cyber-text {
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent) 50%, var(--accent) 100%);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradient-shift 3s linear infinite;
    }

    @keyframes gradient-shift {
        0% {
            background-position: 0% 50%;
        }

        100% {
            background-position: 200% 50%;
        }
    }

    /* Neon glow effect */
    .neon-glow {
        box-shadow:
            0 0 10px color-mix(in srgb, var(--accent) 55%, transparent),
            0 0 20px color-mix(in srgb, var(--accent) 35%, transparent),
            0 0 30px color-mix(in srgb, var(--accent) 25%, transparent),
            inset 0 0 10px color-mix(in srgb, var(--accent) 18%, transparent);
        animation: neon-pulse 2s ease-in-out infinite;
    }

    @keyframes neon-pulse {

        0%,
        100% {
            box-shadow:
                0 0 10px color-mix(in srgb, var(--accent) 55%, transparent),
                0 0 20px color-mix(in srgb, var(--accent) 35%, transparent),
                0 0 30px color-mix(in srgb, var(--accent) 25%, transparent),
                inset 0 0 10px color-mix(in srgb, var(--accent) 18%, transparent);
        }

        50% {
            box-shadow:
                0 0 20px color-mix(in srgb, var(--accent) 75%, transparent),
                0 0 30px color-mix(in srgb, var(--accent) 55%, transparent),
                0 0 40px color-mix(in srgb, var(--accent) 35%, transparent),
                inset 0 0 15px color-mix(in srgb, var(--accent) 25%, transparent);
        }
    }

    /* Hero section (FIX OVERLAY PROPRE + BANNIERE) */
    .hero-section {
        min-height: 100vh;
        position: relative;
        overflow: hidden;
        isolation: isolate;
        /* important pour que les pseudo-elements restent "contenus" */
    }

    /* image de bannière */
    .hero-section::before {
        content: '';
        position: absolute;
        inset: 0;
        background: url('<%= config.bannerUrl %>') center/cover no-repeat;
        transform: scale(1.02);
        /* petit boost pour éviter les bords lors d’anim/blur */
        z-index: -2;
    }

    /* overlay (noir + vibe cyber) */
    .hero-section::after {
        content: '';
        position: absolute;
        inset: 0;
        background:
            linear-gradient(180deg, rgba(0, 0, 0, 0.25) 0%, rgba(0, 0, 0, 0.85) 100%),
            radial-gradient(circle at 20% 30%, color-mix(in srgb, var(--accent) 22%, transparent) 0%, transparent 55%),
            radial-gradient(circle at 80% 70%, color-mix(in srgb, var(--accent) 22%, transparent) 0%, transparent 55%);
        z-index: -1;
        pointer-events: none;
    }

    /* Si tu veux renforcer encore l’overlay sans toucher les gradients */
    .hero-section.overlay-strong::after {
        background:
            linear-gradient(180deg, rgba(0, 0, 0, 0.45) 0%, rgba(0, 0, 0, 0.92) 100%),
            radial-gradient(circle at 20% 30%, color-mix(in srgb, var(--accent) 26%, transparent) 0%, transparent 55%),
            radial-gradient(circle at 80% 70%, color-mix(in srgb, var(--accent) 26%, transparent) 0%, transparent 55%);
    }

    /* Glitch effect */
    .glitch {
        position: relative;
        animation: glitch-skew 1s infinite;
    }

    .glitch::before,
    .glitch::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .glitch::before {
        left: 2px;
        text-shadow: -2px 0 var(--accent);
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }

    .glitch::after {
        left: -2px;
        text-shadow: -2px 0 var(--accent);
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim2 5s infinite linear alternate-reverse;
    }

    @keyframes glitch-anim {
        0% {
            clip: rect(10px, 9999px, 31px, 0);
        }

        20% {
            clip: rect(85px, 9999px, 140px, 0);
        }

        40% {
            clip: rect(90px, 9999px, 60px, 0);
        }

        60% {
            clip: rect(20px, 9999px, 130px, 0);
        }

        80% {
            clip: rect(10px, 9999px, 105px, 0);
        }

        100% {
            clip: rect(60px, 9999px, 25px, 0);
        }
    }

    @keyframes glitch-anim2 {
        0% {
            clip: rect(65px, 9999px, 119px, 0);
        }

        20% {
            clip: rect(20px, 9999px, 40px, 0);
        }

        40% {
            clip: rect(133px, 9999px, 50px, 0);
        }

        60% {
            clip: rect(20px, 9999px, 80px, 0);
        }

        80% {
            clip: rect(40px, 9999px, 66px, 0);
        }

        100% {
            clip: rect(87px, 9999px, 32px, 0);
        }
    }

    @keyframes glitch-skew {
        0% {
            transform: skew(0deg);
        }

        10% {
            transform: skew(-1deg);
        }

        20% {
            transform: skew(0deg);
        }

        30% {
            transform: skew(1deg);
        }

        40% {
            transform: skew(0deg);
        }
    }

    /* Cyber card */
    .cyber-card {
        background: rgba(10, 10, 40, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid color-mix(in srgb, var(--accent) 35%, transparent);
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .cyber-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, color-mix(in srgb, var(--accent) 18%, transparent), transparent);
        transform: rotate(45deg);
        transition: all 0.6s ease;
    }

    .cyber-card:hover {
        border-color: color-mix(in srgb, var(--accent) 75%, transparent);
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 60px color-mix(in srgb, var(--accent) 35%, transparent);
    }

    .cyber-card:hover::before {
        top: 150%;
        left: 150%;
    }

    /* Stats counter */
    .stat-number {
        font-family: 'Orbitron', sans-serif;
        font-size: 3rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--accent), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px color-mix(in srgb, var(--accent) 55%, transparent);
    }

    /* Floating animation */
    @keyframes float {

        0%,
        100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    .float-anim {
        animation: float 3s ease-in-out infinite;
    }

    /* Scanline effect */
    .scanlines {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(0deg,
                color-mix(in srgb, var(--accent) 10%, transparent) 0px,
                transparent 1px,
                transparent 2px,
                color-mix(in srgb, var(--accent) 10%, transparent) 3px);
        pointer-events: none;
        z-index: 9999;
        animation: scanline-move 8s linear infinite;
    }

    @keyframes scanline-move {
        0% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(50px);
        }
    }

    /* Button styles */
    .cyber-btn {
        position: relative;
        background: linear-gradient(135deg, color-mix(in srgb, var(--accent) 22%, transparent), color-mix(in srgb, var(--accent) 22%, transparent));
        border: 2px solid var(--accent);
        color: var(--accent);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .cyber-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, color-mix(in srgb, var(--accent) 45%, transparent), transparent);
        transition: left 0.5s ease;
    }

    .cyber-btn:hover::before {
        left: 100%;
    }

    .cyber-btn:hover {
        background: color-mix(in srgb, var(--accent) 22%, transparent);
        box-shadow: 0 0 20px color-mix(in srgb, var(--accent) 55%, transparent);
        transform: translateY(-2px);
    }

    /* Character silhouettes */
    .character-left,
    .character-right {
        position: absolute;
        bottom: 0;
        height: 70%;
        z-index: 2;
        opacity: 0;
        animation: fadeInChar 1.5s ease forwards;
    }

    .character-left {
        left: -10%;
        animation-delay: 0.5s;
    }

    .character-right {
        right: -10%;
        animation-delay: 0.8s;
    }

    /* FIX: on anime juste l'opacité + une petite translation, pas left/right des deux côtés */
    @keyframes fadeInChar {
        to {
            opacity: 0.4;
            transform: translateX(0);
        }
    }

    .character-left {
        transform: translateX(-40px);
    }

    .character-right {
        transform: translateX(40px);
    }

    .character-left img,
    .character-right img {
        height: 100%;
        filter:
            brightness(0.3) contrast(1.2) drop-shadow(0 0 30px color-mix(in srgb, var(--accent) 35%, transparent));
    }

    /* Job cards with hover effect */
    .job-card {
        background: rgba(10, 10, 40, 0.7);
        border: 1px solid color-mix(in srgb, var(--accent) 35%, transparent);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .job-card::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: color-mix(in srgb, var(--accent) 22%, transparent);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .job-card:hover::after {
        width: 300px;
        height: 300px;
    }

    .job-card:hover {
        border-color: var(--accent);
        box-shadow: 0 0 30px color-mix(in srgb, var(--accent) 45%, transparent);
        transform: scale(1.05);
    }

    /* Mobile menu animation */
    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .mobile-menu-open {
        animation: slideDown 0.3s ease forwards;
    }
</style>